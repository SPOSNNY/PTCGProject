@{
    ViewData["Title"] = "PTCG卡牌查詢系統";
}

@model IEnumerable<PTCGProject.Models.CardModel>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>卡片資料</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>卡片資料查詢</h2>


    <form action="~/Home/Index" method="post" runat="server">
        <select name="cardAttribute" id="cardAttribute">
            <option value="">請選擇卡片屬性</option>
            @foreach (var attr in ViewBag.CardAttributes)
            {
                <option value="@attr">@attr</option>
            }
        </select>
        <select name="cardType">
            <option value="">請選擇卡片類別</option>
            @foreach (var type in ViewBag.CardTypes)
            {
                <option value="@type">@type</option>
            }
        </select>
        <select name="cardRarity">
            <option value="">請選擇卡片稀有度</option>
            @foreach (var rarity in ViewBag.CardRarities)
            {
                <option value="@rarity">@rarity</option>
            }
        </select>
        <select name="cardVersion">
            <option value="">請選擇卡片版本代號</option>
            @foreach (var version in ViewBag.CardVersions)
            {
                <option value="@version">@version</option>
            }
        </select>
        <input type="text" name="cardName" placeholder="輸入卡片名稱查詢...">
        <button type="submit">查詢</button>
    </form>

    <table id="cardTable">
        <thead>
            @if (Model != null)
            {
                <tr>
                    <th>卡片編號</th>
                    <th>卡片名稱</th>
                    <th>卡片屬性</th>
                    <th>卡片類別</th>
                    <th>卡片稀有度</th>
                    <th>卡片版本代號</th>
                </tr>
            }
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var card in Model)
                {
                    <tr>
                        <td>@card.CardId</td>
                        <td>@card.CardName</td>
                        <td>@card.CardAttribute</td>
                        <td>@card.CardType</td>
                        <td>@card.CardRarity</td>
                        <td>@card.CardVersion</td>
                    </tr>
                }
            }
            else
            {
                <p>查無卡片資料</p>
            }
        </tbody>
    </table>
</body>
</html>